(load "git@github.com:carpentry-org/log.git@0.0.4")

(defmodule SimpleLog
  (defn log [r]
    (if (< @(LogRecord.level r) Log.INFO)
        (IO.errorln &(LogRecord.pretty r))
        (IO.println &(LogRecord.pretty r))))

  (defn install [lvl]
    (do
      (Log.set-level lvl)
      (Log.set-logger log)))
)
